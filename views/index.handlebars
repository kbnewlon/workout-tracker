<main class="container">

  <section class="row  border-top center-section">


    <article class="col-sm-12 text-center" id="top-bar">

      <h1>Fitness Tracker 2020: Preparing for the Apocalypse</h1>

    </article>

  </section>
  <br><br>
  <section class="row  border-bottom center-section">

    <article class="col-lg-6">

      <h2>Current Menu</h2>

      <ul>

        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}

      </ul>

      <h2>Burgers You've Eaten</h2>

      <ul>

        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}

      </ul>

    </article>


    <article class="col-lg-6">

      <img src="/assets/images/burger.png" alt="burger" class="img-thumbnail">

    </article>

    <br>
  </section>

  <section>


    <section class="row">

      <article class="col-lg-12 text-center">

        <h2>What kind of burger would you like?</h2>

        <form class="create-form burger-form">

          <div class="form-group">

            <input type="text" id="ca" name="name">

          </div>

          <button type="submit">Order here!!</button>

        </form>

      </article>

    </section>

  </section>

</main>